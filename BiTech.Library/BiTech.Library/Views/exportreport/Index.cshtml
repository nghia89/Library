
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h3>xuất sách số lượng sách được mượn và người mượn sách:</h3>
        <form action="/Exportreport/ExportTTSach" method="get" role="form">
            <button style="float:left" type="submit" class="btn btn-primary">Xuất sách mượn</button>
            <div class="col-lg-2" style="float:left">
                <select class="form-control" name="year">
                    <option value="">---chọn năm---</option>
                    @for (int i = Int32.Parse(ViewBag.tt); i <= DateTime.Now.Year; i++)
                    {
                        if (DateTime.Now.Year == i)
                        {
                            <option value="@i" selected hidden>Năm @i</option>
                        }
                        <option value="@i">Năm @i</option>
                    }
                </select>
            </div>
        </form>
        <div class="clearfix"></div>
        <h3>xuất sách tất cả sách cho mượn và không cho mượn:</h3>
        <a href="/Exportreport/ExportSLSachTT" class="btn btn-info">Xuất tất cả sách</a>
    </div>
</div>

