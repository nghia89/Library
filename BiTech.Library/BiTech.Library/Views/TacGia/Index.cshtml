@model PagedList.IPagedList<BiTech.Library.Models.TacGiaViewModel>
@using PagedList.Mvc

@{
    ViewBag.Title = "Tác Giả";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";

}

<div class="Title">Danh Sách Tác Giả</div>

<p>@Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-sm btn-primary" })</p>
<table class="table table-hover table-bordered" border="1">
    <thead>
        <tr class="table-info">
            <th width="50" align="right">STT</th>
            <th>Tên Tác Giả</th>
            <th>Quốc Tịch</th>
            <th>Mô Tả</th>
            <th></th>
        </tr>
    </thead>
    @{int i = 1;}
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td align="center">@(i + (ViewBag.pages - 1) * ViewBag.pageSize)</td>
                <td>@item.TenTacGia</td>
                <td>@item.QuocTich</td>
                <td>@item.MoTa</td>
                <td><a class="color-white btn btn-outline-primary btn-sm" href="@Url.Action("Edit","TacGia", new { id = item.Id })">Sửa <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
            </tr>
            { i++; }
        }
    </tbody>
</table>

<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
</div>