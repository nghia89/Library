@model BiTech.Library.Models.TacGiaViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<script src="~/Scripts/jquery-1.12.4.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<div class="Title">Thêm Tác Giả</div>
<div class="container">
    @using (Html.BeginForm("Create", "TacGia", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()
        
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="tensach">Tên Tác Giả</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.TenTacGia, new { @class = "form-control", @id = "tentacgia" })
                @Html.ValidationMessageFor(m => m.TenTacGia, "" ,new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="tensach">Quốc Tịch</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.QuocTich, new { @class = "form-control", @id = "quoctich" })
                @Html.ValidationMessageFor(m => m.QuocTich, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="tensach">Mô Tả</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.MoTa, new { @class = "form-control", @id = "mota" })
                @Html.ValidationMessageFor(m => m.MoTa, "", new { @class = "text-danger" })
            </div>

        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-9">
                <input type="submit" class="btn btn-primary" name="btnThemTacGia" value="Thêm Mới" />
                <input type="button" onclick="goBack()" class="btn btn-default" value="Trở lại" />
            </div>
        </div>

    }
</div>

