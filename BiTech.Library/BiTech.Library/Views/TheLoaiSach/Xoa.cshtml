@model BiTech.Library.Models.TheLoaiSachViewModels
@{
    ViewBag.Title = "XoaTheLoaiSach";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="Title">Xóa Thể Loại Sách</div>
<div class="container">
    @using (Html.BeginForm("Xoa", "TheLoaiSach", FormMethod.Post, new { role = "form" }))
    {
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="TenTheLoai">Tên Thể Loại:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.TenTheLoai, new { @class = "form-control", @id = "TenTheLoai" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="MoTa">Mô Tả:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.MoTa, new { @class = "form-control", @id = "MoTa" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for=""></label>
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary" value="Xóa" />
                <input type="button" value="Trở lại" onclick="location.href = '/TheLoaiSach';" class="btn btn-default" />
            </div>
        </div>
    }
</div>


