@model BiTech.Library.Models.TheLoaiSachViewModels
@{
    ViewBag.Title = "ThemTheLoaiSach";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="Title">Thêm Thể Loại</div>
<div class="container">
    @using (Html.BeginForm("Them", "TheLoaiSach", FormMethod.Post, new { role = "form" }))
    {
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="TenTheLoai">Tên cha:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.IdParent, new SelectList(ViewBag.ListTheLoai, "Id", "TenTheLoai"), "--- Chọn thư mục cha ---", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="TenTheLoai">Tên Thể Loại:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.TenTheLoai, new { @class = "form-control", @id = "TenTheLoai" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="MoTa">Mô Tả:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.MoTa, new { @class = "form-control", @id = "MoTa" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for=""></label>
            <div class="col-sm-10">
                <input type="submit" name="btnThemTheLoai" class="btn btn-primary" value="Thêm Mới" />
                <input type="button" class="btn btn-default" value="Trở lại" onclick="goBack()" />
            </div>
        </div>
    }
</div>



