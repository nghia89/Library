@model BiTech.Library.Models.TheLoaiSachViewModels
@{
    ViewBag.Title = "SuaTheLoaiSach";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<link href="~/bower_components/sweetalert/dist/sweetalert.css" rel="stylesheet" />
<div class="Title">Sửa Thể Loại Sách</div>
<div class="container">
    @using (Html.BeginForm("Sua", "TheLoaiSach", FormMethod.Post, new { role = "form" }))
    {
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="TenTheLoai">Tên cha:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.IdParent, new SelectList(ViewBag.ListTheLoai, "Id", "TenTheLoai"),"--- Chọn thư mục cha ---", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="TenTheLoai">Tên Thể Loại:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.TenTheLoai, new { @class = "form-control", @id = "TenTheLoai" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="MoTa">Mô Tả:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.MoTa, new { @class = "form-control", @id = "MoTa" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for=""></label>
            <div class="col-sm-10">
                <input type="submit" class="btn btn-primary" value="Cập nhật" />
                <input type="button" value="Xóa" class="btn btn-danger"  onclick="XoaTLS('@Model.Id','@Model.TenTheLoai')" />
                <input type="button" value="Trở lại" onclick="location.href = '/TheLoaiSach';" class="btn btn-default" />
            </div>
        </div>


    }
</div>
@section scripts{
    <script src="~/bower_components/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        function XoaTLS(id,ten) {
            swal({
                title: " Bạn có muốn xóa thể loại sách " + ten + "?",
                text: "Bạn sẽ không thể khôi phục lại tác giả này sau khi xóa!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Có",
                cancelButtonText: "Không",
                closeOnConfirm: false,
                closeOnCancel: false
            },
            function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        type: 'POST',
                        url: "/TheLoaiSach/Xoa",
                        data: { "Id": id },
                        success: function (resultData) {
                            swal({
                                title: "Bạn đã xóa thành công!",
                                text: "Bạn sẽ không thể khôi phục lại tác giả này sau khi xóa!",
                                type: "success",
                                showCancelButton: false,
                                confirmButtonText: "OK",
                                closeOnConfirm: false
                            },
                            function (isConfirm) {
                                window.location.href = '/TheLoaiSach/Index';
                            });
                        }
                    });
                } else {
                    swal("Cancelled", "Your imaginary file is safe :)", "error");
                }
            });
        }
    </script>
}



