@using Microsoft.AspNet.Identity
@{
    Layout = null;
}
<div class="top clearfix">
    <div class="banner">
        <h5>Phần mềm Quản lý Thư viện B.Lib - @ViewBag.SSOSchoolName </h5>
    </div>

    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav menutop">
                <li class="nav-item">
                    <div class="dropdown">
                        <div class="dropdown-toggle" data-toggle="dropdown">

                            <a href="@Url.Action("Index", "Manage", new { title = "Manage" })">
                                Hello @ViewBag.SSOFullName "!"
                            </a>
                        </div>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="//bitechco.test/Customer/MyProfile">Link 1</a>
                            @Html.ActionLink("Đăng xuất", "logoff", "Account", null, new { @class = "dropdown-item" })
                        </div>
                    </div>
                </li>
            </ul>
        }
    }
</div>