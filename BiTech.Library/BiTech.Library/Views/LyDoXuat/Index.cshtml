@model PagedList.IPagedList<BiTech.Library.Models.LyDoXuatViewModel>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
 
}

<div class="Title">Danh Sách Lý Do</div>


<p>@Html.ActionLink("Thêm Mới", "Create", null, new { @class = "btn btn-primary" })</p>
<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-info">

            <th>Lý Do Xuất</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>

                <td>@item.LyDo</td>
                <td><a class="color-white btn btn-outline-primary btn-sm" href="@Url.Action("Edit","LyDoXuat", new { id = item.Id })">Sửa <i class="fa fa-pencil-square-o" aria-hidden="true"></i></a></td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>



