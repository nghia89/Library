@model BiTech.Library.Models.TrangThaiSachViewModels
@{
    ViewBag.Title = "SuaTT";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2 style="padding-bottom:50px">Sửa Trạng Thái Sách</h2>

<div class="container">
    @using (Html.BeginForm("Sua", "TrangThai", FormMethod.Post, new { role = "form" }))
    {
        <div class="form-group">
            <label class="class=" col-form-label col-sm-2">Tên Trạng Thái</label>
            <div class="col-sm-6">
                <input class="form-control" value="@Model.TenTT" name="TenTT" />
            </div>
        </div>
        
        <input type="submit" class="btn btn-default" name="btnSuaTheLoai" value="Sửa" />
    }
</div>

