@model BiTech.Library.Models.TrangThaiSachViewModels
@{
    ViewBag.Title = "ThemTT";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="Title">Thêm tình trạng sách</div>
<div class="container clearfix">


    <div class="container">
        @using (Html.BeginForm("Them", "TrangThaiSach", FormMethod.Post, new { role = "form" }))
        {

            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="tensach">Tên tình trạng:</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(m => m.TenTT, new { @class = "form-control form-control-sm", @id = "tentt" })
                    @Html.ValidationMessageFor(m => m.TenTT, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row tinhtrangsach">
                <label class="col-form-label col-sm-2" for="tensach">Loại tình trạng:</label>
                <div class="col-sm-9 mt-2">
                    <div class="custom-control custom-checkbox">
                        @Html.CheckBoxFor(m => m.TrangThai, new { @Class = "custom-control-input", @checked= "checked" })
                        <label class="custom-control-label" for="TrangThai">Cho phép mượn sách</label>
                    </div>
                </div>
            </div>

            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="customCheck" name="example1">
                
            </div>

            <div class="form-group row">
                <label class="col-form-label col-sm-2"></label>
                <div class="col-sm-9">
                    <input type="submit" class="btn btn-primary btn-sm" name="btnThemTrangThai" value="Thêm Mới" />
                    <input type="button" onclick="goBack()" class="btn btn-default btn-sm" value="Trở lại" />
                </div>

            </div>

        }
    </div>
</div>

@section scripts{

}

