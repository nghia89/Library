@section scripts{

    <script type="text/javascript" language="javascript">
        $(document).ready(function () {
            $("#idSach").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/PhieuNhapSach/AutoComplete",
                        dataType: "json",
                        method: "post",
                        data: { a: request.term },
                        success: function (data) {
                            response($.map(data, function (item) {
                                return { label: item.MaKiemSoat, value: item.MaKiemSoat };
                            }))
                        }
                    })
                },
                messages: {
                    noResults: "", results: ""
                }
            });
        })

        function EnterMaSach() {
            var idBook = $("#idSach").val();
            console.log(idBook);
			if (idBook == "") {
				alert('Chưa nhập mã sách');
			}
            else {
                $.ajax({
                    type: "GET",
                    url: "@(Url.Action("GetBookByID", "PhieuNhapSach"))",
                    data: "idSach=" + idBook,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
					success: function (data) {
						console.log(data.SoLuongTong);
						if (data.SoLuongConLai > 0) {
							console.log('Tim thay sach');
                            $("#idSach").val(idBook);
                            $("#SoLuong").focus();
                            $("#TenSach").val(data.TenSach)
						}
						else {
							alert('Sách trong kho không có sẵn.')
							$("#idSach").val('');
                            $("#idSach").focus();
                            $("#TenSach").val('')
						}
                    },
                    error: function () {
                        alert('Mã sách không tồn tại');
						$("#idSach").val("");
                        $("#TenSach").val('')
                    }
                });
            }
        }

         function CompleteBookName() {
            var idBook = $("#idSach").val();
            if (idBook != "") {
                $.ajax({
                    type: "GET",
                    url: "@(Url.Action("GetBookByID", "PhieuNhapSach"))",
                    data: "idSach=" + idBook,
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (data) {
                        console.log('Tim thay sach');
                        $("#idSach").val(idBook);
                        $("#TenSach").val(data.TenSach)
                    },
                    error: function () {
                        alert('Mã sách không tồn tại');
                        $("#idSach").focus();
                        $("#idSach").val('');
                        $("#TenSach").val('')
                    }
                });
            }
        }
    </script>
}



