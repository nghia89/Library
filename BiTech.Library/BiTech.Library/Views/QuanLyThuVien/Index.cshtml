@model BiTech.Library.Models.ThongTinThuVienModel
@{
}
<link href="~/bower_components/sweetalert/dist/sweetalert.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.12.4.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<div class="Title">Sửa thông tin</div>

<div class="form-group row">
    <div class="col-md-12">
        <button type="button" class="btn btn-primary btn-sm" onclick="goBack()">
            <i class="fa fa-arrow-circle-left" style="padding-right: 4px;font-size: 17px;"></i>Trở lại
        </button>
    </div>
</div>

@using (Html.BeginForm("Index", "QuanLyThuVien", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="tenke">Tên thư viện:<span style="color:#dc3545">*</span></label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.TenThuVien, new { @class = "form-control form-control-sm", @id = "tenke" })
                @Html.ValidationMessageFor(model => model.TenThuVien, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="vitri">Thông tin thẻ thư viện (Sở/Phòng):<span style="color:#dc3545">*</span></label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.TheHeader1, new { @class = "form-control form-control-sm", @id = "vitri" })
                @Html.ValidationMessageFor(model => model.TheHeader1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="ghichu">Thông tin thẻ thư viện (Trường):<span style="color:#dc3545">*</span></label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.TheHeader2, new { @class = "form-control form-control-sm", @id = "ghichu" })
                @Html.ValidationMessageFor(model => model.TheHeader2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="ghichu">Địa chỉ:<span style="color:#dc3545">*</span></label>
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.DiaChi, new { @class = "form-control form-control-sm", @id = "ghichu" })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input type="submit" value="Cập nhật" class="btn btn-primary btn-sm" />
            </div>
        </div>
    </div>
}

@section scripts{
    <script src="~/bower_components/sweetalert/dist/sweetalert.min.js"></script>
    <script>

    </script>
}