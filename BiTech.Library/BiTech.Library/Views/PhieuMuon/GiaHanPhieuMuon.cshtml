@model BiTech.Library.Models.PhieuMuonModelView
@{
    ViewBag.Title = "GiaHanPhieuMuon";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

@using (Html.BeginForm("GiaHanPhieuMuon", "PhieuMuon", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Gia hạn phiếu mượn.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m., new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.IdUser, new { @class = "form-control" })
        </div>
        @Html.ValidationMessageFor(m => m.IdUser)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TenNguoiMuon, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TenNguoiMuon, new { @class = "form-control" })
        </div>
    </div>
}