@model PagedList.IPagedList<PhieuMuon>
@using System.Globalization;
@using BiTech.Library.DTO;
@using BiTech.Library.Models;
@using PagedList.Mvc;
@{
    ViewBag.Title = "DanhSachTra";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var months = DateTimeFormatInfo
  .InvariantInfo
  .MonthNames
  .TakeWhile(monthName => monthName != String.Empty)
  .Select((monthName, index) => new SelectListItem
  {
      Value = (index + 1).ToString(CultureInfo.InvariantCulture),
      Text = string.Format("({0}) {1}", index + 1, monthName)
  });

    var years = Enumerable
    .Range(2017, 10)
    .Select(year => new SelectListItem
    {
        Value = year.ToString(CultureInfo.InvariantCulture),
        Text = year.ToString(CultureInfo.InvariantCulture)
    });
}
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />

<h2 class="text-center">Thống kê danh mục trả sách</h2>
<hr />
<div id="DatetimePicker"> </div>
<h4 class="text-info">Danh mục trả sách theo tháng</h4>
<div class="row">
    <div class="col-md-2">
        @Html.DropDownList("month", months, new { onchange = @"onMonthSelectedChagned();", @class = "form-control" })
    </div>
    <div class="col-md-2">
        @Html.DropDownList("year", years, new { onchange = @"onYearSelectedChagned();", @class = "form-control" })
    </div>
</div>
<h4 class="text-info">Danh mục trả sách theo ngày</h4>
@Html.TextBox("day", "", new { onchange = @"onDaySelectedChagned()", @class = "form-control datepicker" })
<hr />

<table class="table">
    <thead>
        <tr class="text-primary h4">
            <th>STT</th>
            <th>Tên người mượn</th>
            <th>Tên sách</th>
            <th>Ngày mượn</th>
            <th>Hạn phải trả</th>
            <th>Ngày trả</th>
            <th>Tình trạng</th>
            <th>Gia hạn</th>
            <th>Ghi chú</th>
        </tr>
    </thead>
    @{ int i = 0; int dem = 1;}
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>@((ViewBag.pageSize * (ViewBag.pages - 1)) + dem)</td>
                <td>@ViewBag.listThanhVien[i].Ten</td>
                <td>@ViewBag.listSach[i].TenSach</td>
                <td>@item.NgayMuon.ToString("dd-MM-yyyy")</td>
                <td>@item.NgayPhaiTra.ToString("dd-MM-yyyy")</td>
                <td>@item.NgayTra.ToString("dd-MM-yyyy")</td>
                @if (item.SoNgayGiaoDong != null)
                {
                    <td class="@item.TrangThai.ToString()">@item.TenTrangThai - (@item.SoNgayGiaoDong.ToString() ngày)</td>
                }
                else
                {
                    <td class="@item.TrangThai.ToString()">@item.TenTrangThai</td>
                }

                <td>@item.Id</td>
                <td>listGanTra</td>
            </tr>
        </tbody>
        { i++; dem++; }
    }
</table>

<p>
    @Html.PagedListPager(Model, Page => Url.Action("DanhSachTra", new { page = Page, day = ViewBag.Day, month = ViewBag.Month, year = ViewBag.Year }), PagedListRenderOptions.ClassicPlusFirstAndLast)
</p>

<style>
    .TraTre {
        background: #fdf0b2;
        color: #000;
    }

    .TraDungHen {
        background: #91d8a9;
        color: #000;
    }
</style>
@section scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @*<script src="~/Scripts/jquery-1.12.4.js"></script>*@
    <script>
        $(function () {
            $(".datepicker").datepicker({              
                //monthNamesShort: ["một", "hai", "ba", "bốn", "năm", "sáu", "bảy", "tám", "chín", "mười", "mười một", "mười hai"],
                monthNamesShort: ["01","02","03","04","05","06","07","08","09","10","11","12"],
                //showWeek: true,
                autosize:true,
                dateFormat: "dd/mm/yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "-10:+1",
                onSelect: function (dateText, inst) {
                    var ngay = $("input[name='day']").val();                 
                    window.location.href = '/ThongKe/DanhSachTra?page=1&day=' + ngay;
                }
            });
            var monthNames = $(".datepicker").datepicker("option", "monthNames");
            console.log(monthNames);
        });

        function onMonthSelectedChagned() {         
            window.location.href = '/ThongKe/DanhSachTra?page=1&month=' + $("#month").val() + '&year=' + $("#year").val();
        }

        function onYearSelectedChagned() {
            window.location.href = '/ThongKe/DanhSachTra?page=1&month=' + $("#month").val() + '&year=' + $("#year").val();
        }
    </script>
}

