@model PagedList.IPagedList<ThongTinMuonSach>
@using System;
@using System.Globalization;
@using BiTech.Library.DTO;
@using PagedList.Mvc;
@{

    ViewBag.Title = "ThongTinDocGia";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<h2 class="text-center">Lịch sử mượn sách</h2>
<h4 class="text-info">Độc giả: @ViewBag.TenThanhVien</h4>

<table class="table table-hover">
    <thead>
        <tr class="table-info text-center">
            <th>STT</th>
            <th>Tên sách</th>
            <th>Số lượng</th>
            <th>Ngày mượn</th>
            <th>Hạn phải trả</th>
            <th>Ngày trả</th>
            <th>Trạng thái</th>
            <th>Tiền phạt</th>
            <th>Gia hạn</th>
            @*<th>Ghi chú</th>*@
        </tr>
    </thead>
    @{ int i = ViewBag.pageSize * (ViewBag.pages - 1); int j = ViewBag.pageSize * (ViewBag.pages - 1); int dem = 1;}
    @foreach (var item in Model)
    {
        //foreach (var sach in @ViewBag.ListSach[i])
        //{
            <tbody>
                <tr>
                    <td class="text-center">@((ViewBag.pageSize * (ViewBag.pages - 1)) + dem)</td>
                    <td>@ViewBag.ListSach[i].TenSach</td>
                    <td class="text-center">@item.SoSachTong</td>
                    @*<td>@ViewBag.SoLuongSachMuon[j] cuốn</td>*@
                    <td class="text-center">@item.NgayGioMuon</td>
                    <td class="text-center">@item.NgayPhaiTra</td>

                    @{
                        string ngayTraThucTe = item.NgayTraThucTe != null ? item.NgayTraThucTe : "01-01-0001";
                        //DateTime? ngayTra = item.NgayTra;
                        //string ngayTraFormat = ngayTra.HasValue ? ngayTra.Value.ToString("dd-MM-yyyy") : "Ngày trả chưa có";
                    }
                    @*@if (item.NgayTra != null && ngayTraFormat.Equals("01-01-0001") == false)*@
                    @if (item.NgayTraThucTe.Equals("01-01-0001") == false)
                    {
                        @*<td>@ngayTraFormat</td>*@
                        <td>@ngayTraThucTe</td>
                        if (item.SoNgayGiaoDong != null)
                        {
                            <td class="@item.TrangThai.ToString()">@item.TenTrangThai - (@item.SoNgayGiaoDong.ToString() ngày)</td>
                        }
                        else
                        {
                            <td class="@item.TrangThai.ToString()">@item.TenTrangThai</td>
                        }
                    }
                    else
                    {
                        <td class="text-center">---//---</td>
                        if (item.SoNgayGiaoDong != null && item.SoNgayGiaoDong < 30)
                        {
                            <td class="@item.TrangThai.ToString()">@item.TenTrangThai - (còn @item.SoNgayGiaoDong.ToString() ngày)</td>
                        }
                        else
                        {
                            if (item.SoNgayGiaoDong == null)
                            {
                                DateTime ngayPhaiTra = DateTime.ParseExact(item.NgayPhaiTra, "dd-MM-yyyy", null);
                                var ngayTre = DateTime.Now - ngayPhaiTra;                               
                                <td class="@item.TrangThai.ToString()">@item.TenTrangThai - (trễ @ngayTre.Days ngày)</td>
                            }
                            else
                            {
                                <td class="@item.TrangThai.ToString()">Còn @item.SoNgayGiaoDong.ToString() ngày</td>
                            }
                        }
                    }
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
                                { dem++; j++; }
                            //}
                            { i++; }
                        }

</table>

<p>
    @Html.PagedListPager(Model, Page => Url.Action("ThongTinDocGia", new { page = Page, id = ViewBag.Id, pagePM = @ViewBag.pagePM, day = @ViewBag.Day, month = @ViewBag.Month, year = @ViewBag.Year })@*, PagedListRenderOptions.ClassicPlusFirstAndLast*@)
</p>
@if (@ViewBag.Day != null || @ViewBag.Monthyear != null @*|| @ViewBag.Year == null*@)
{
    @Html.ActionLink("Trở về danh sách phiếu mượn", "MuonSach",
                          new { page = @ViewBag.pagePM, day = @ViewBag.Day, month = @ViewBag.Month, year = @ViewBag.Year }, new { @class = "btn btn-sm btn-primary" })
}
else
{
    @Html.ActionLink("Trở về thông tin độc giả", "ThongTinDocGia", new { id = @ViewBag.Id }, new { @class = "btn btn-sm btn-primary" })
}


