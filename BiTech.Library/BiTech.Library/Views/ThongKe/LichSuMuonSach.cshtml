    .ChuaTra {
        background: #ff9a9a;
        color: #000;
    }

    .GanTra {
        background: #b7dbff;
        color: #000;
    }

    .TraTre {
        background: #fdf0b2;
        color: #000;
    }

    .TraDungHen {
        background: #91d8a9;
        color: #000;
    }
</style>