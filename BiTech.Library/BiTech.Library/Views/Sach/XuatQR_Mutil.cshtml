@model IPagedList<BiTech.Library.Models.BookView>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Xuất QR sách";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    
    var list = (IEnumerable<BiTech.Library.Models.IDSach>)ViewBag.container;
    var i = 0;
}
<link href="~/bower_components/sweetalert/dist/sweetalert.css" rel="stylesheet" />
<div class="title" style="float: left;">Danh sách đầu sách</div>
<div class="clearfix"></div>
<div class="clearfix">
    <div class="form-group row">
        <div class="col-md-12">
            <button type="button" class="btn btn-primary btn-sm" onclick="window.location='/HocSinh'">
                <i class="fa fa-arrow-circle-left" style="padding-right: 4px;font-size: 17px;"></i>Trở lại
            </button>
        </div>
    </div>

    <form action="/HocSinh/XuatTheHS" class="clearfix">
        <div class="input-group form-group text-left">
            <div class="form-control form-control-sm p-0" style="position:relative;">
                <input type="text" id="txtKeyword" name="Keyword" class="form-control form-control-sm border-0"
                       placeholder="Nhập tên hoặc mã thành học sinh...">
            </div>
            <div class="input-group-append">
                <button class="btn btn-sm btn-primary" id="btnSearch" type="submit">
                    <i class="fa fa-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>
<form action="/Sach/XuatQR_Mutil" method="post" class="clearfix" id="ExportMany">
    <div class="clearfix pb-sm-2 pl-sm-2 row bar_mobile">
        <input type="button" value="Xuất thẻ" onclick="XuatThe()" class="btn btn-sm btn-danger ml-sm-2" />
    </div>
    <div class="book_content pb-sm-2 pl-sm-2 p-3 clearfix">
        <table class="table table-bordered" id="tblFunction">
            <thead>
                <tr class="table-info">
                    <th width="10" scope="col"><input type="checkbox" id="CheckAll" /></th>
                    <th width="10">STT</th>
                    <th width="30%" scope="col">Tên sách</th>
                    <th width="20%" scope="col">Mã kiểm soát</th>
                    <th width="20%" scope="col">Tác giả</th>
                    <th width="20%" scope="col">Năm xuất bản</th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    i++;
                    <tr class="">
                        @if (list.Any(x => x.Id == item.SachDTO.Id))
                        {
                            <td> <input type="checkbox" checked name="chon" class="AddList_HS" value="@item.SachDTO.Id"></td>
                        }
                        else
                        {
                            <td> <input type="checkbox" name="chon" class="AddList_HS" value="@item.SachDTO.Id"></td>
                        }
                        @*<td width="10">
                                <input type="checkbox" name="chon" value="@item.Id" class="AddList_HS" />
                            </td>*@
                        <td width="10" align="center">@i</td>
                        <td width="30%">@item.SachDTO.TenSach</td>
                        <td width="20%">@item.SachDTO.MaKiemSoat</td>
                        <td width="20%">@item.Ten_TacGia</td>
                        <td width="20%">@item.SachDTO.NamXuatBan</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>
@if (@ViewBag.number > 5)
{
    @Html.PagedListPager(Model, page => Url.Action("XuatQR_Mutil", new { page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
}
@section scripts{
    <script src="~/Scripts/ExportCard.js"></script>
