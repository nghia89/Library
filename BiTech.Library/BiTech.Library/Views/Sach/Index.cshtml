@model BiTech.Library.Models.ListBooks
@{
    ViewBag.Title = "Index";
    var listSach = ViewBag.ListSach;
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="Title">Danh Sách</div>
<div class="container clearfix">
    @{int i = 1;}
    
    <a href="@Url.Action("Them")" class="btn btn-primary">Thêm Mới</a>
    <div class="book_content clearfix">
        @foreach (var item in Model.Books)
        {
            <div class="book_box clearfix">
                <div class="book_Title clearfix">
                    @*<div class="book_number">@i</div>
                    <div class="book_control">
                        
                    </div>*@
                </div>
                <div class="book_content">
                    <div class="book_image">
                        <div class="book_image_in">
                            <div class="book_number">@i</div>
                            <img src='@Html.Raw(item.LinkBiaSach.Length > 0 ? @item.LinkBiaSach : "../Assets/Images/Sana Twice 1996.jpg")' />
                            <a href="@Url.Action("Sua", new { id = item.Id })">Xem</a>
                        </div>
                    </div>
                    <div class="book_information">
                        <div class="book_cell_information">
                            <div class="book_title_information">Mã đầu sách:</div>
                            <div class="book_content_information">@item.IdDauSach</div>
                        </div>
                        <div class="book_cell_information">
                            <div class="book_title_information">Mã kiểm soát:</div>
                            <div class="book_content_information">@item.MaKiemSoat</div>
                        </div>
                        <div class="line-gl"></div>
                        <div class="book_cell_information">
                            <div class="book_title_information">Tên:</div>
                            <div class="book_content_information">@item.TenSach</div>
                        </div>
                        <div class="line-xl"></div>
                        <div class="book_cell_information">
                            <div class="book_title_information">Thể loại:</div>
                            <div class="book_content_information">@item.TheLoai</div>
                        </div>
                        <div class="line-gl"></div>
                        <div class="book_cell_information">
                            <div class="book_title_information">Kệ Sách:</div>
                            <div class="book_content_information">@item.KeSach</div>
                        </div>
                        <div class="book_cell_information">
                            <div class="book_title_information">Ngôn Ngữ:</div>
                            <div class="book_content_information">@item.NgonNgu</div>
                        </div>
                        <div class="line-gl"></div>
                        <div class="line-xl"></div>
                        <div class="book_cell_information">
                            <div class="book_title_information">Nhà Xuất Bản:</div>
                            <div class="book_content_information">@item.NhaXuatBan</div>
                        </div>
                        <div class="book_cell_information">
                            <div class="book_title_information">Năm Xuất Bản:</div>
                            <div class="book_content_information">@item.NamXuatBan</div>
                        </div>
                        <div class="line-gl"></div>
                        <div class="book_cell_information">
                            <div class="book_title_information">SL Tổng:</div>
                            <div class="book_content_information">@item.SoLuongTong</div>
                        </div>
                        <div class="line-xl"></div>
                        <div class="book_cell_information">
                            <div class="book_title_information">SL Còn lại:</div>
                            <div class="book_content_information">@item.SoLuongConLai</div>
                        </div>
                        <div class="line-gl"></div>
                        <div class="book_cell_information">
                            <div class="book_title_information">Giá Sách:</div>
                            <div class="book_content_information">@item.GiaSach</div>
                        </div>
                        <div class="book_cell_information box_temp">
                            <div class="book_title_information"></div>
                            <div class="book_content_information"></div>
                        </div>
                        <div class="line-gl"></div>
                        <div class="line-xl"></div>
                        <div class="book_cell_information tomtac">
                            <div class="book_title_information">Tóm Tắt:</div>
                            <div class="book_content_information">@item.TomTat</div>
                        </div>
                        <div class="line-xl"></div>
                        <div class="line-gl"></div>
                    </div>
                </div>
            </div>
            { i++; }
        }
    </div>
    <a href="@Url.Action("Them")" class="btn btn-primary">Thêm Mới</a>
</div>


