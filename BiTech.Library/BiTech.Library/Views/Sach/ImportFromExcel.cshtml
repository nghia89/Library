@model BiTech.Library.Models.SachViewModels
@{
    ViewBag.Title = "ImportFromExcel";
}

<div class="Title">Thêm sách từ File Excel</div>
@using (Html.BeginForm("ImportFromExcel", "Sach", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div class="form-group row">
        <div class="col-md-12">
            <button type="button" class="btn btn-primary btn-sm" onclick="window.location='@Url.Action("Index", "Sach")'">
                <i class="fa fa-arrow-circle-left" style="padding-right: 4px;font-size: 17px;"></i>Trở lại
            </button>
        </div>
    </div>

    @Html.AntiForgeryToken()
    <div class="form-group row">
        <div class="col-sm-12">
            <div class="custom-file">
                @Html.TextBoxFor(m => m.LinkExcel, new { @Class = "custom-file-input", type = "file", accept = ".csv, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" })
                <label class="custom-file-label" for="LinkExcel">Chọn file</label>
                @Html.ValidationMessageFor(m => m.LinkExcel)
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-12">
            <input type="submit" class="btn btn-sm btn-primary" value="Chọn" />
        </div>
    </div>
}

@section scripts{
    <script>
        function ReadUrl(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#SaveFile').attr('src', e.target.result);
                    reader.readAsDataURL(input.files[0]);
                }
            }
        }
        $("#LinkExcel").change(function () {
            ReadUrl(this);
        });
    </script>
}








