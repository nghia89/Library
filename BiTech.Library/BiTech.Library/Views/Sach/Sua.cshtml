@model BiTech.Library.Models.SachViewModels
@{
    ViewBag.Title = "SuaSach";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="Title">Sửa Sách</div>
<div class="container">
    @using (Html.BeginForm("Sua", "Sach", FormMethod.Post, new { role = "form" }))
    {

        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="tensach">Tên Sách:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.TenSach, new { @class = "form-control", @id = "tensach" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="iddausach">Id Đầu Sách:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.IdDauSach, new { @class = "form-control", @id = "iddausach" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="TenTheLoai">Thể Loại Sách:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.IdTheLoai, new SelectList(ViewBag.ListTheLoai, "Id", "TenTheLoai"), " ", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="IdKeSach">Id Kệ sách:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.IdKeSach, new { @class = "form-control", @id = "IdKeSach" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="IdNhaXuatBan">Id Nhà Xuất Bản:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.IdNhaXuatBan, new SelectList(ViewBag.ListNXB, "Id", "Ten"), "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="IdNhaXuatBan">Id Trang Thái:</label>
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.IdTrangThai, new SelectList(ViewBag.ListTT, "Id", "TenTT"), "", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="MaKiemSoat">Id Mã Kiểm Soát:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.MaKiemSoat, new { @class = "form-control", @id = "MaKiemSoat" })
            </div>
        </div>
        @*<div class="form-group row">
            <label class="col-form-label col-sm-2" for="Hinh">Hình:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Hinh, new { @class = "form-control", @id = "Hinh" })
            </div>
        </div>*@
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="SoTrang">Số Trang:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.SoTrang, new { @class = "form-control", @id = "SoTrang" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="NgonNgu">Ngôn Ngữ:</label>
            <div class="col-sm-10">
                @Html.EnumDropDownListFor(m => m.NgonNgu, new { @class = "form-control", @id = "NgonNgu" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="NamSanXuat">Năm Sản Xuất:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.NamSanXuat, new { @class = "form-control", @id = "NamSanXuat" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="GiaSach">Giá Sách:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.GiaSach, new { @class = "form-control", @id = "GiaSach" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="LinkBiaSach">Link Bìa Sách:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.LinkBiaSach, new { @class = "form-control", @id = "LinkBiaSach" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="TomTat">Tóm Tắt:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.TomTat, new { @class = "form-control", @id = "TomTat" })
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for=""></label>
            <div class="col-sm-10">
                <input type="submit" value="Sửa" class="btn btn-primary" />
                <input type="button" value="Xóa" class="btn btn-secondary" onclick="XoaCauHoi()" />
            </div>
        </div>
        <br/>
        
    }

</div>

@section scripts{
    <script>
        function XoaCauHoi() {
            swal({
                title: "Are you sure?",
                text: "You will not be able to recover this imaginary file!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Yes, delete it!",
                cancelButtonText: "No, cancel plx!",
                closeOnConfirm: false,
                closeOnCancel: false
            },
            function (isConfirm) {
                if (isConfirm) {
                    swal("Deleted!", "Your imaginary file has been deleted.", "success");
                    // ajax post id to delete
                } else {
                    swal("Cancelled", "Your imaginary file is safe :)", "error");
                }
            });
        }
    </script>
}