@model BiTech.Library.Models.PhieuTraViewModel
@{
    ViewBag.Title = "TraSach";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title" id="myModalLabel">Trả sách  </h4>
</div>


<hr />  

@using (Html.BeginForm("TraSach", "PhieuTra", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.IdNguoiMuon, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.IdNguoiMuon, new { @class = "form-control" , @readonly = "readonly"})
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NguoiMuon, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.NguoiMuon, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IdSach, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.IdSach, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TenSach, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.TenSach, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>    

    <div class="form-group">
        @Html.LabelFor(m => m.IdTinhTrang, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.IdTinhTrang, new SelectList(ViewBag.ListTinhTrangSach, "Id", "TenTT"))
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Trả sách" />
        </div>
    </div>
}
