@model BiTech.Library.Models.LanguageModel

@{
    ViewBag.Title = "Create";
}

<script src="~/Scripts/jquery-1.12.4.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<div class="Title">Thêm ngôn ngữ</div>

<div class="form-group row">
    <div class="col-md-12">
        <button type="button" class="btn btn-primary btn-sm" onclick="goBack()">
            <i class="fa fa-arrow-circle-left" style="padding-right: 4px;font-size: 17px;"></i>Trở lại
        </button>
    </div>
</div>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row">
                <label class="control-label col-sm-2" for="TheL_Ten">Ngôn ngữ:<span style="color:#dc3545">*</span></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TheL.Ten, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.TheL.Ten, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <label class="control-label col-sm-2" for="TheL_TenNgan">Tên ngắn:<span style="color:#dc3545">*</span></label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TheL.TenNgan, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                    @Html.ValidationMessageFor(model => model.TheL.TenNgan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2"></div>
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo mới" class="btn btn-primary btn-sm" />
                </div>
            </div>
        </div>
    }
</div>