@model BiTech.Library.Models.PhieuNhapSachModels
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="Title">Phiếu Nhập</div>

<div class="container-box-window clearfix">
    <div class="top">
        <span class="">Thông tin phiếu nhập</span>
    </div>
    <div class="content-box-window">
        <div class="container">
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="tensach">IdUserAdmin</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.IdUserAdmin, new { @class = "form-control form-control-sm", @id = "IdUserAdmin", @readonly = true })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="tensach">Ngày Nhập:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.NgayNhap, new { @class = "form-control form-control-sm", @id = "NgayNhap", @readonly = true })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="tensach">Ghi Chú:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.GhiChu, new { @class = "form-control form-control-sm", @id = "GhiChu", @readonly = true })
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<div class="container-box-window clearfix">
    <div class="top">
        <span class="">Danh Sách Chi Tiết Phiếu Nhập</span>
    </div>
    <div class="content-box-window">
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="table-info">
                    <th>Tên Sách</th>
                    <th>Số lượng</th>
                    <th>Tình Trạng</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.lstctnhap)
            {
                    <tr>
                        <td>@item.ten</td>
                        <td>@item.soLuong</td>
                        <td>@item.tenTinhTrang</td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<br>     
<input type="button" onclick="goBack()" class="btn btn-default btn-sm" value="Trở lại" />


