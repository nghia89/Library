@model BiTech.Library.Models.PhieuNhapSachModels
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<div class="Title">Chi tiết phiếu nhập sách</div>
<br/>
<button type="button" class="btn btn-primary btn-sm" onclick="window.location='@Url.Action("Index", "PhieuNhapSach")'">
    <i class="fa fa-arrow-circle-left" style="padding-right: 4px;font-size: 17px;"></i>Trở lại
</button>
<hr />
<div class="container-box-window clearfix">
    <div class="top">
        <span class="" style="font-size:22px">Thông tin phiếu nhập</span>
    </div>
    <div class="content-box-window">
        <div class="container">
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="tensach">IdUserAdmin</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.IdUserAdmin, new { @class = "form-control form-control-sm", @id = "IdUserAdmin", @readonly = true })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="tensach">Ngày nhập:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.NgayNhap, new { @class = "form-control form-control-sm", @id = "NgayNhap", @readonly = true })
                </div>
            </div>
            <div class="form-group row">
                <label class="col-form-label col-sm-2" for="tensach">Ghi chú:</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(m => m.GhiChu, new { @class = "form-control form-control-sm", @id = "GhiChu", @readonly = true })
                </div>
            </div>
        </div>
    </div>
</div>
<br>
<div class="container-box-window clearfix">
    <div class="top">
        <span class="" style="font-size:22px">Danh sách chi tiết phiếu nhập</span>
    </div>
    <div class="content-box-window">
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="table-info">
                    <th>Tên sách</th>
                    <th>Số lượng</th>
                    <th>Tình trạng</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.lstctnhap)
            {
                    <tr>
                        <td>@item.ten</td>
                        <td>@item.soLuong</td>
                        <td>@item.tenTinhTrang</td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
