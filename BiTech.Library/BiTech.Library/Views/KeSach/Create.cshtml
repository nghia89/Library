@model BiTech.Library.Models.KesachViewModels
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div class="Title">Thêm mới kệ sách</div>

@using (Html.BeginForm("Create", "KeSach", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="tensach">Tên Kệ:</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.TenKe, new { @class = "form-control form-control-sm", @id = "tenke" })
                @Html.ValidationMessageFor(model => model.TenKe, "", new { @class = "text-danger" })
            </div>

        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="tensach">Vị Trí:</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.ViTri, new { @class = "form-control form-control-sm", @id = "vitri" })
                @Html.ValidationMessageFor(model => model.ViTri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="tensach">Thông tin:</label>
            <div class="col-sm-9">
                @Html.TextBoxFor(model => model.GhiChu, new { @class = "form-control form-control-sm", @id = "ghichu" })
                @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-9">
                <input type="submit" value="Tạo mới" class="btn btn-primary btn-sm" />
                <input type="button" onclick="goBack()" class="btn btn-default btn-sm" value="Trở lại" />
            </div>
        </div>

    </div>
}

