@model IEnumerable<BiTech.Library.Models.KesachViewModels>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/bower_components/sweetalert/dist/sweetalert.css" rel="stylesheet" />
<h2>Ke sach</h2>
<a href="@Url.Action("Create")">create</a>
<table border="1">
    <thead>
        <tr>
            <th>Tên Thể Loại</th>
            <th>Mô Tả</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        
        @foreach (var item in Model)
        {
            <tr>
                @*<td ><input type="hidden" value="@item.Id" /> </td>*@
                <td>@item.TenKe</td>
                <td>@item.ViTri</td>
                <td>@item.GhiChu </td>
                <td><a href="@Url.Action("Edit", new { id = item.Id })">Sửa</a>|
                <a onclick="DeleteItem('@item.Id','@item.TenKe')">Xóa</a></td>
               
            </tr>
          
        }
        
    </tbody>
    
</table>
@section scripts{
    <script src="~/bower_components/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        
        function DeleteItem(Id,name) {

            swal({
                title: " bạn có thật sự muôn xóa "+ name +"",
                text: "Bạn không thể khôi phục lại sau khi xóa!",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-danger",
                confirmButtonText: "Yes",
                cancelButtonText: "No",
                closeOnConfirm: false,
                closeOnCancel: false

            },
            function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        type: 'POST',
                        url: "/Kesach/Delete",
                        data: { "Id": Id },
                        success: function (resultData) {
                            swal({
                                title: "Bạn đã xóa thành công!",
                                text: "bạn không thể khôi phục sau khi xóa!",
                                type: "success",
                                showCancelButton: false,
                                confirmButtonText: "OK",
                                closeOnConfirm: false
                            },
                            function (isConfirm) {
                                window.location.href = '/KeSach/Index';
                            });
                        }
                    });
                } else {
                    swal("Cancelled", "Your imaginary file is safe :)", "error");
                }
            });
        }
    </script>
}

