@model BiTech.Library.Models.UserViewModel
@{
    ViewBag.Title = "ExportWord";
}

<link rel="stylesheet" type="text/css" href="~/bower_components/custom-file-input/css/component.css" />
<div class="Title"> Xuất mẫu thẻ giáo viên</div>
<div class="clearfix"></div>
<button type="button" class="btn btn-primary btn-sm" onclick="window.location='@Url.Action("Index", "GiaoVien")'">
    <i class="fa fa-arrow-circle-left" style="padding-right: 4px;font-size: 17px;"></i>Trở lại
</button>

<div class="form-group row">
    <label class="col-form-label col-md-2 control-label" for="TomTat">Mẫu thẻ 1:</label>
    <div class="col-sm-6">
        <a href="@Url.Action("MauThe","GiaoVien",new { @mauThe = "mau1" })">
            <img id="SaveImage" src="~/Content/Images/Mau1.png" alt="Ảnh nhân viên" style="width:800px;height:250px" />
        </a>     
    </div>
</div>

<div class="form-group row">
    <label class="col-form-label col-md-2 control-label" for="TomTat">Mẫu thẻ 2:</label>
    <div class="col-sm-6">

        <a href="@Url.Action("MauThe","GiaoVien",new { @mauThe = "mau2" })">
            <img id="SaveImage" src="~/Content/Images/Mau2.png" alt="Ảnh nhân viên" style="width:800px;height:250px" />
        </a>       
    </div>
</div>

<label for="LinkWord">Chọn mẫu thẻ khác: </label>

@using (Html.BeginForm("ExportWord", "GiaoVien", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    <div class="form-group row">
        <div class="col-sm-12">
            @*<img id="SaveFile" src="/Content/Images/nancyy.jpg" alt="Ảnh nhân viên" style="width:220px" />*@
            <div class="box">
                @Html.TextBoxFor(m => m.LinkWord, new { @Class = "inputfile inputfile-2", type = "file", accept = ".docx,.doc" })
                <label for="LinkWord"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" /></svg> <span>Chọn file</span></label>
                @Html.ValidationMessageFor(m => m.LinkExcel)
            </div>

        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-sm btn-primary" value="Chọn" />
        </div>
    </div>
}

@section scripts{
    <script>
        function ReadUrl(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#SaveFile').attr('src', e.target.result);
                    reader.readAsDataURL(input.files[0]);
                }
            }
        }
        $("#LinkWord").change(function () {
            ReadUrl(this);
        });
    </script>
}


