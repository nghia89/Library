@model BiTech.Library.Models.UserViewModel
@{
    ViewBag.Title = "Details";
}
<link href="~/Content/AvatarDetail.css" rel="stylesheet" />
<h2>Thông tin giáo viên: @Model.Ten</h2>
<button type="button" class="btn btn-sm btn-primary" onclick="window.location='@Url.Action("Index", "GiaoVien")'">
    <i class="fa fa-arrow-circle-left" style="padding-right: 4px;font-size: 17px;"></i>Trở lại
</button>

<div class="form-group row">
    <div class="col-sm-6">
        <img src="@Model.QRLink" alt="Mã QR" style="width:auto" />
    </div>
</div>

<div class="container">
    <div class="row h5">
        <div class="col-md-6">
            <img class="avatar_detail" src="@Html.Raw(Model.LinkAvatar)" />
        </div>
        <div class="col-md-6">
            <div class="col-lg-10">
                <div class="row">
                    <div class="col-sm">
                        Tên User:
                    </div>
                    <div class="col-sm">
                        @Model.UserName
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm">
                        Mã số giáo viên:
                    </div>
                    <div class="col-sm">
                       @Model.MaSoThanhVien
                    </div>
                   
                    
                </div>
                <div class="row">
                    <div class="col-sm">
                        Họ và tên:
                    </div>
                    <div class="col-sm-6">
                        @Model.Ten
                    </div>
                 
                   
                </div>
                <div class="row">
                    <div class="col-sm">
                        Giới tính:
                    </div>
                    <div class="col-sm">
                        @Model.GioiTinh
                    </div>
                   
                  
                </div>
                <div class="row">
                    <div class="col-sm">
                        Ngày sinh:
                    </div>
                    <div class="col-sm">
                        @Model.NgaySinh.ToString("dd/MM/yyyy")
                    </div>
                  
                 
                </div>
                <div class="row">
                    <div class="col-sm">
                        Lớp học:
                    </div>
                    <div class="col-sm">
                        @Model.LopHoc
                    </div>
                   
                   
                </div>
                <div class="row">
                    <div class="col-sm">
                        Niêm khóa:
                    </div>
                    <div class="col-sm">
                        @Model.NienKhoa
                    </div>
                 
                   
                </div>
                <div class="row">
                    <div class="col-sm">
                        Địa chỉ:
                    </div>
                    <div class="col-sm">
                        @Model.DiaChi
                    </div>
                  
                   
                </div>
                <div class="row">
                    <div class="col-sm">
                        Số điện thoại:
                    </div>
                    <div class="col-sm">
                        @Model.SDT
                    </div>
                 
                   
                </div>
            </div>
        </div>
    </div>
</div>




<table class="table table-hover table-bordered">
    <thead>
        <tr class="table-info">
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <a class="color-white btn btn-sm btn-outline-primary" href="@Url.Action("_Edit", new { @id = @Model.Id })">
                    <i style="font-size:20px" class="fa">&#xf044;</i> Sửa thông tin
                </a>
                <a class="color-white btn btn-sm btn-outline-primary" href="@Url.Action("ChangePassword", new { @idUser = @Model.Id })">
                    <i style="font-size:20px" class="fa">&#xf044;</i> Đổi mật khẩu
                </a>
            </td>
        </tr>
    </tbody>
</table>
