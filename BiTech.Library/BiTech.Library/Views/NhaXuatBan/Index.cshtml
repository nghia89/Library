@model PagedList.IPagedList<BiTech.Library.Models.NhaXuatBanViewModels>
@using PagedList.Mvc
@{
    ViewBag.Title = "DanhSachNXB";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
   
}

        <div class="Title">Danh Sách nhà xuất bản</div>
      
        <p>@Html.ActionLink("Thêm Mới", "Them", null, new { @class = "btn btn-primary" })</p>
        <table class="table table-hover table-bordered">
            <thead>
                <tr class="table-info">
                    <th>Tên Nhà Xuất Bản</th>
                    <th>Ghi Chú</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Ten</td>
                        <td>@item.GhiChu</td>
                        <td>

                            <a class="color-white btn btn-outline-primary" href="@Url.Action("Sua",new { id = item.Id})">
                                Sửa
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>




                        </td>
                    </tr>
                }
            </tbody>
        </table>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

