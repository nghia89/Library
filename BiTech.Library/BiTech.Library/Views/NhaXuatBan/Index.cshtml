@model IEnumerable<BiTech.Library.Models.NhaXuatBanViewModels>
@{
    ViewBag.Title = "DanhSachNXB";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var listNXB = ViewBag.ListNhaXuaBan;
}
<div class="row">
    <div class="col-lg-10">
        <h2>Danh Sách nhà xuất bản</h2>
        <button type="button" style="margin-bottom: 11px;float: right;" class="btn btn-primary"><a class="button_a color-white" href="@Url.Action("Them")">Thêm mới</a></button>

        <table class="table table-hover table-bordered">
            <thead>
                <tr class="table-info">
                    <th>Tên Nhà Xuất Bản</th>
                    <th>Ghi Chú</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in listNXB)
                {
                    <tr>
                        <td>@item.Ten</td>
                        <td>@item.GhiChu</td>
                        <td>

                            <a class="color-white btn btn-outline-primary" href="@Url.Action("Sua",new { id = item.Id})">
                                Sửa
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            </a>


                            |

                            <a class="color-white btn btn-outline-danger" href="@Url.Action("Xoa",new { id = item.Id})">
                                Xóa
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </a>


                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


